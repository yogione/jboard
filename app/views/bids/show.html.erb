<%- model_class = Bid -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:postid) %>:</strong></dt>
  <dd><%= @bid.postid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:userid) %>:</strong></dt>
  <dd><%= @bid.userid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:counter_offer) %>:</strong></dt>
  <dd><%= @bid.counter_offer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @bid.comments %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bids_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bid_path(@bid), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bid_path(@bid),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
