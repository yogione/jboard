<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:taskname) %>:</strong></dt>
  <dd><%= @post.taskname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:userid) %>:</strong></dt>
  <dd><%= @post.userid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount_offered) %>:</strong></dt>
  <dd><%= @post.amount_offered %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_to_complete) %>:</strong></dt>
  <dd><%= @post.time_to_complete %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_zip_code) %>:</strong></dt>
  <dd><%= @post.location_zip_code %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
