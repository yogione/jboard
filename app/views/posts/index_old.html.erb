<h1>Listing posts</h1>

<table>
  <tr>
    <th>Taskname</th>
    <th>Userid</th>
    <th>Amount offered</th>
    <th>Time to complete</th>
    <th>Location zip code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.taskname %></td>
    <td><%= post.userid %></td>
    <td><%= post.amount_offered %></td>
    <td><%= post.time_to_complete %></td>
    <td><%= post.location_zip_code %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

